<%- include('./base/header.ejs')%>
<%- include('./base/nav.ejs')%>

<div class = "container">
     <div class ="alert  text-center bg-success my-3" style = "color:rgb(29, 27, 27)">
        <h4>Student List</h4>
    </div>
</div>
<div class = "container">
    <table class = "table text-center">
        <thead>
            <tr>
                <th>Student Photo</th>
                <th>Roll No</th>
                <th>Name</th>
                <th>Father Name</th>
                <th>Mother Name</th>
                <th>Course</th>
                <th>Branch</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <%  students.forEach((student)=>{  %>
                
               <tr> 
                <td><image src = "<%= student.StudentImage %> " width = "50px" height="50px" ></image></td>
                <td> <%= student.RollNo %></td>
                <td><%= student.Name %></td>
                <td><%= student.FatherName %></td>
                <td><%= student.MotherName %></td>
                <td><%= student.Course %></td>
                <td><%= student.Branch %></td>
            <td>
                <a href = "" class ="btn btn-warning">Edit</a>
               <a href = "/delete/student/<%= student._id %>" class ="btn btn-danger">Delete</a>
            </td>
            </tr>
            <% })  %>
            
        </tbody>
    </table>
</div>



<%- include('./base/footer.ejs') %>
